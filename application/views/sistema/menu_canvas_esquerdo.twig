{% set _tipo = 'drilldown' %}
{% if type is defined %}
	{% set _tipo = type %}
{% endif %}
{% if submenu is defined %}
    {% set menu = submenu %}
    <ul class="vertical menu{{ _tipo == 'accordion'?' nested':'' }}">
{% else %}
    {% set menu = app.config.item('menu-principal') %}
	{% if _tipo == 'accordion' %}
		<ul class="vertical menu" data-accordion-menu>
	{% elseif _tipo == 'drilldown' %}
		<ul class="vertical menu" data-back-button="<li class='js-drilldown-back'><a>Voltar</a></li>" data-drilldown>
	{% endif %}
    
{% endif %}
    {% for item in menu %}
        <li>
            {% if item.url is defined %}
                <a href="{{ base_url(item.url) }}">
            {% endif %}
                {% if item.icone is defined %}
                    <i class="{{ item.icone }}"></i> <span>
                {% endif %}
                {{ item.titulo }}
                {% if item.icone is defined %}
                    </span>
                {% endif %}
            {% if item.url is defined %}
                </a>
            {% endif %}
            {% if item.submenu is defined %}
                {% include 'sistema/menu_canvas_esquerdo.twig' with {'submenu': item.submenu} %}
            {% endif %}
        </li>
    {% endfor %}
</ul>