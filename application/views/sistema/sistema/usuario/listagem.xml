<?xml version="1.0" encoding="UTF-8"?>
<root>
    <table id="tabela-usuario-sistema"
           name="usuario-sistema"
           selector="id"
           url="sistema/sistema/usuario" 
           model="user_model"
           sortcol="0"
    >
        <title>Consulta Usuário</title>
        <search>
            <searchtext></searchtext>
            <searchfield>
                <option id="alias">Nome</option>
                <option id="email">Email</option>
                <option id="nivel">Nível</option>
            </searchfield>
        </search>
        <head>
            <hcol id="id" name="id" type="identificador" orderby="id {$direction$}">
                <title>Código</title>
                <select>id</select>
                <size>exato</size>
            </hcol>
            <hcol id="alias" name="alias" type="alfanumerico" orderby="alias {$direction$}">
                <title>Nome</title>
                <select>alias</select>
                <size>30</size>
            </hcol>
            <hcol id="email" name="email" type="alfanumerico" orderby="email {$direction$}">
                <title>Email</title>
                <select>email</select>
                <size>70</size>
            </hcol>
            <hcol id="nivel" name="nivel" type="alfanumerico" orderby="nivel {$direction$}">
                <title>Nível</title>
                <select>nivel</select>
                <size>exato</size>
            </hcol>
        </head>
        <body>
            <bcol type="link">
                <url>sistema/sistema/usuario/cadastro/{$id$}</url>
                <content>{$id$}</content>
            </bcol>
            <bcol type="link">
                <url>sistema/sistema/usuario/cadastro/{$id$}</url>
                <content>{$alias$}</content>
            </bcol>
            <bcol type="texto">
                <content>{$email$}</content>
            </bcol>
            <bcol type="texto">
                <content>{$nivel$}</content>
            </bcol>
        </body>
        <buttongroup>
            <button type="novo" id="novo">
                <title>Novo</title>
                <url>sistema/sistema/usuario/cadastro</url>
            </button>
        </buttongroup>
    </table>
    
</root>
