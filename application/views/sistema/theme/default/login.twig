<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="{{ base_url('assets/framework/css/foundation.min.css') }}">
        <link rel="stylesheet" href="{{ base_url('assets/framework/foundation-icons.css') }}">
        <link rel="stylesheet" href="{{ base_url('assets/css/sistema/login.css') }}">
        <script src="{{ base_url('assets/framework/js/vendor/jquery.js') }}"></script>
        <title>{{ titulo }}</title>
    </head>
    <body>
        <div class="row">  
          <div class="small-12 medium-centered medium-6 columns login">
            {% if message is defined %}
                <div class="alertas">
                    {% include 'sistema/theme/default/message.twig' with {'message':message} %}
                </div>
            {% endif %}
            {#{ validation_errors() }#}
            <form action="{{ base_url('sistema/autenticacao/entrar') }}" method="POST">
                <div class="row">
                  <div class="large-12 columns text-center">
                      <h2>D'Moura</h2>
                  </div>
                </div>
                <div class="row">
                  <div class="large-12 columns">
                      <label>
                          Usu√°rio
                          <input type="text" name="usuario" placeholder="Email ou matricula">
                      </label>
                  </div>
                </div>
                <div class="row">
                  <div class="large-12 columns">
                      <label>
                          Senha
                          <input type="password" name="senha" placeholder="Senha">
                      </label>
                  </div>
                </div>
                <div class="row">
                  <div class="large-12 columns">
                      <button type="submit" name="entrar" class="button expanded large">Entrar</button>
                  </div>
                </div>
            </form>
          </div>
        </div>
        <script src="{{ base_url('assets/framework/js/vendor/what-input.js') }}"></script>
        <script src="{{ base_url('assets/framework/js/vendor/foundation.min.js') }}"></script>
        <script>$(document).foundation();</script>
        <script type="text/javascript">
            function centralizar_login(){
                var winh = $(window).height() || $(window).clientHeight();
                var margin = (winh - $('.login').height()) / 2;
                $('.login').css('margin-top',margin);
                $('.login').css('margin-bottom',margin);
            }
            centralizar_login();
            $(window).resize(function (){
                centralizar_login();
            });
        </script>
    </body>
</html>